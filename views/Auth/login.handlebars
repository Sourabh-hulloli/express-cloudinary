<div class="col-md-4 mx-auto card my-4">
    <div class="card-body">
        <h3 class="font-weight-bold h3 text-uppercase">Login</h3>
        <form action="/auth/login" method="post">

            <div class="form-group"><label for="email">Email</label><input type="email" name="email"
                    class="form-control" id="email" required placeholder="enter email">
            </div>
            <div class="form-group"><label for="password">Password</label>
                <input type="password" class="form-control" id="password" name="password" required
                    placeholder="enter password">
            </div>

            <div class="form-group">
                <button class="btn btn-dark btn-block">Login</button>
            </div>

        </form>
        </>
    </div>